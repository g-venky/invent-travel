<ul class="nav navbar-nav navbar-right">
  <li ><%= link_to 'Add My Doubt', new_promotion_path %></li>
</ul>
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Destination</th>
      <th>Doubt details</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @my_doubts.each do |my_doubt| %>
      <tr>
        <td><%= my_doubt.destination %></td>
        <td><%= my_doubt.doubt_details %></td>
        <td><%= link_to 'Edit', edit_my_doubt_path(my_doubt) %></td>
        <td><%= link_to 'Destroy', my_doubt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



