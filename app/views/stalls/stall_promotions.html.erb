<% @promotions.each do |promotion|%>
  <% if user_signed_in? %>

<table>

  <tr>
    <td style="text-align: center;"><%=  promotion.destination %></td>
  </tr>
  <tr>
   <td ><%= image_tag promotion.image.url(:medium) %></br><%=promotion.details %></td>
  </tr>
  <tr>
   <td> <%= link_to like_promotion_path(promotion), method: :put, class: "btn btn-info btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        Upvote
        <%= promotion.get_upvotes.size %>
      <% end %></td>
  </tr>
</table></br>  
<% end %>
<% end %>
