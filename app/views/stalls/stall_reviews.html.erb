<% unless seller_signed_in? %>
<%= simple_form_for [@stall, Review.new]  do |f| %>
  <div class="form-group">
    <%= f.label :Write_review, class: "btn btn-primary" %><br>
    <%= f.text_field :rating, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= f.text_field :body, class: "form-control" %>
  </div>
  <%= f.submit "Add review", class: "btn btn-primary" %>
<% end %>
<ul class="nav navbar-nav navbar-left">
  <li ><%= link_to 'Back', stall_path(@stall) %></li>
</ul>
<% end %>

<div id="reviews">
  <%= render :partial => @stall.reviews %>
</div>
