<div class="row2">
<div class="column2 side2">
</div>
<div class="column2 middle2">
<%= simple_form_for [@stall, Review.new]  do |f| %>
<h3 style="color: lightblue;">Write Review</h3>
  <div class="form-group">
    <%= label_tag 'rating_average','average'  %>
    <%= check_box_tag 'review[rating][]','average',checked('average'),id: 'rating_average' %>
  </div>
  <div class="form-group">
    <%= label_tag 'rating_good','good'  %>
    <%= check_box_tag 'review[rating][]','good',checked('good'),id: 'rating_good' %>
  </div>
  <div class="form-group">
    <%= label_tag 'rating_excellent','excellent'  %>
    <%= check_box_tag 'review[rating][]','excellent',checked('excellent'),id: 'rating_excellent' %>
  </div>

    <div class="form-group">
    <%= f.text_area :body, class: "form-control" %>
  
  <%= f.submit "Add review", class: "btn btn-primary" %>
<% end %></div></br>
<div id="reviews">
  <%= render :partial => @stall.reviews %>
</div>

<ul class="nav navbar-nav navbar-left">
  <li ><%= link_to 'Back', stall_path(@stall), class: "btn btn-info" %></li>
</ul>


</div>
<div class="column2 side2">
</div>
</div>