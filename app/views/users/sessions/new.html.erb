<div class="row2">
<div class="column2 side2">
</div>
<div class="column2 middle2">
<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <div class="form-group">
    <%= f.label :email %></br>
    <%= f.email_field :email, autofocus: true, required: false %>
  </div>

  <div class="form-group">
    <%= f.label :password %></br>
    <%= f.password_field :password, required: false %>
  </div>

  <div class="checkbox">
    <label>
    <%= f.check_box :remember_me, required: false, as: :boolean if devise_mapping.rememberable? %> Remember Me
    </label>
  </div>

  <div class="form-group">
    <%= f.submit "Sign In", class: "btn btn-primary" %>
  </div>

<% end %>

<%= render "users/shared/links" %>
</div>

<div class="column2 side2">
</div>
</div>