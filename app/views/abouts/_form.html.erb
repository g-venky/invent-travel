<%= simple_form_for(@about) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input :about_us %>
  <%= f.input :destination %>
  <%= f.input :contact %>
  <%= f.input :office %>
  <%= f.input :travel_segment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
