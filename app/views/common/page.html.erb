<%if @active_tab == 'Promotions'%>
        <%= link_to 'promotions', promotions_path, class: "btn btn-secondary" %>
      <%else%>
        <a class="btn <%= @active_tab == 'all_deals' || @active_tab == 'add_deal' || @active_tab == 'my_deals' ? 'btn-primary' : 'btn-secondary' %> dropdown-toggle" type="button" data-toggle="dropdown" href="/deals">
          Deals
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to 'All Deals', all_deals_path, remote: true, class: "btn btn-sm #{@active_tab == 'all_deals' ? 'btn-primary' : ''} sub-tab" %>
          </li>
          <li><%= link_to 'Add My deal', new_deal_path, remote: true, class: "btn btn-sm #{@active_tab == 'add_deal' ? 'btn-primary' : ''} sub-tab", id: "deal_btn" %>
          </li>
          <li>
            <%= link_to 'My deal', my_deals_path, remote: true, class: "btn btn-sm #{@active_tab == 'my_deals' ? 'btn-primary' : ''} sub-tab" %>
          </li>
        </ul>
      <%end%>