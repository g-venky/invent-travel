<p id="notice"><%= notice %></p>

<div class="link row clearfix">
  <h3 style="text-align: center;">Discussions</h3></br>
  <h3><%= @topic.discussions %></h3>
</div>

<div class="link row clearfix">
  <h3 style="text-align: center;">Details</h3></br>
  <ul class="nav navbar-nav navbar-right">
  <li ><%= link_to 'Add Your Topic', new_topic_path %></li>
</ul>
  <h3><%= @topic.details %></h3>
</div>
<% if @topic.user==current_user %>

	<div class="btn-group">
		<%= link_to 'Edit', edit_topic_path(@topic), class: "btn btn-default" %>
		<%= link_to 'Back', topics_path, class: "btn btn-default" %>
		<%= link_to 'Destroy', @topic, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
	</div>
<% end %>

<h3 class="comments_title">
  <%= @topic.comments.count %> Comments
</h3>

<div id="comments">
  <%= render :partial => @topic.comments %>
</div>
<%= simple_form_for [@topic, Comment.new]  do |f| %>
  <div class="field">
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <br>
  <%= f.submit "Add Comment", class: "btn btn-primary" %>
<% end %>