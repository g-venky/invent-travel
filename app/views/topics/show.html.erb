<p id="notice"><%= notice %></p>

<p>
  <strong>Discussions:</strong>
  <%= @topic.discussions %>
</p>

<p>
  <strong>Details:</strong>
  <%= @topic.details %>
</p>
<% if @topic.user==current_user %>

	<div class="btn-group">
		<%= link_to 'Edit', edit_topic_path(@topic), class: "btn btn-default" %>
		<%= link_to 'Back', topics_path, class: "btn btn-default" %>
		<%= link_to 'Destroy', @topic, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
	</div>
<% end %>
<div class="btn-group pull-right">
  <%= link_to like_topic_path(@topic), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-up"></span>
    Upvote
    <%= @topic.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_topic_path(@topic), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-down">
    Downvote
    <%= @topic.get_downvotes.size %>
  <% end %>
</div>