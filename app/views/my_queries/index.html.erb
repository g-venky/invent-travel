<div class="row2">
<div class="column2 side2">
</div>
<div class="column2 middle2">
<h6 style="float: right;"><%= link_to 'Add My Query', new_my_query_path , class: "btn btn-info"%></h6>

<p id="notice"><%= notice %></p>

<h1>My Queries</h1>
    <table>
  <tr>
       <th  >Query Number</th>
      <th >Destination</th>
      <th  >No.of Pax</th>
      <th >travel date</th>
      <th >Duration</th>
      <th >Tour Requirements</th>
      <th >Quotes Received</th>
  </tr>

    
    <% @my_queries.each do |my_query| %>
    <% if current_user==my_query.user %>
    
       <tr>
          <td ><%= my_query.id %></td>
        <td ><%= my_query.destination %></td>
           <td><%= my_query.pax %> adults, <%= my_query.child %> children</td>
        <td ><%= my_query.travel_date %></td>
        <td><%= my_query.duration %></td>
        <td ><%= my_query.tour_requirements %></td>
        <td><%= link_to my_query.quotes.count ,my_query %></td>

  </tr>
 
     
    
    <% end %>
    <% end %>
    
</table>

 
<br>

</div>
<div class="column2 side2">
</div>
</div>